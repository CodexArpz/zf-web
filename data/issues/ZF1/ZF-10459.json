        "comment": {
            "name": "comment",
            "type": "com.atlassian.jira.issue.fields.CommentSystemField",
            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/45563",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=kaiuwe",
                        "name": "kaiuwe",
                        "displayName": "Kai Uwe",
                        "active": true
                    },
                    "body": "I don't understand your problem. Can you give an example?\r\n\r\n{code:title=Simple example}\r\n\/\/ Navigation\r\n$container = new Zend_Navigation(array(\r\n    array(\r\n        'label' => 'Home',\r\n        'uri'   => 'home',\r\n    ),\r\n    array(\r\n        'label' => 'Products',\r\n        'uri'   => 'products',\r\n        'pages' => array(\r\n            array(\r\n                'label' => 'DVD',\r\n                'uri'   => 'dvd',\r\n            ),\r\n            array(\r\n                'label' => 'Games',\r\n                'uri'   => 'games',\r\n            ),\r\n            array(\r\n                'label' => 'Music',\r\n                'uri'   => 'music',\r\n            ),\r\n        ),\r\n    ),\r\n    array(\r\n        'label' => 'Contact',\r\n        'uri'   => 'contact',\r\n    ),\r\n    array(\r\n        'label' => 'imprint',\r\n        'uri'   => 'imprint',\r\n    ),\r\n));\r\n\r\n\/\/ View\r\n$view = new Zend_View();\r\n\r\necho '<h1>Output 1:<\/h1>';\r\necho $view->navigation($container)->menu();\r\n\r\n\/\/ Remove page \"Products\"\r\n$container->removePage(1);\r\n\r\necho '<h1>Output 2:<\/h1>';\r\necho $view->navigation($container)->menu();\r\n{code}\r\n\r\n{code:title=Output|borderStyle=solid}\r\n<h1>Output 1:<\/h1>\r\n<ul class=\"navigation\">\r\n    <li>\r\n        <a href=\"home\">Home<\/a>\r\n    <\/li>\r\n    <li>\r\n        <a href=\"products\">Products<\/a>\r\n        <ul>\r\n            <li>\r\n                <a href=\"dvd\">DVD<\/a>\r\n            <\/li>\r\n            <li>\r\n                <a href=\"games\">Games<\/a>\r\n            <\/li>\r\n            <li>\r\n                <a href=\"music\">Music<\/a>\r\n            <\/li>\r\n        <\/ul>\r\n    <\/li>\r\n    <li>\r\n        <a href=\"contact\">Contact<\/a>\r\n    <\/li>\r\n    <li>\r\n        <a href=\"imprint\">imprint<\/a>\r\n    <\/li>\r\n<\/ul>\r\n<h1>Output 2:<\/h1>\r\n<ul class=\"navigation\">\r\n    <li>\r\n        <a href=\"home\">Home<\/a>\r\n    <\/li>\r\n    <li>\r\n        <a href=\"contact\">Contact<\/a>\r\n    <\/li>\r\n    <li>\r\n        <a href=\"imprint\">imprint<\/a>\r\n    <\/li>\r\n<\/ul>\r\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=kaiuwe",
                        "name": "kaiuwe",
