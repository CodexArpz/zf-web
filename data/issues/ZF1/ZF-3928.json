                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/25303",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=sidhighwind",
                        "name": "sidhighwind",
                        "displayName": "Jon Whitcraft",
                        "active": true
                    },
                    "body": "Attached is the proposed patch file.\n\nWith this file you can call your string like this:\n\n{code}\n$this->headScript()->setAutoEscape(true)->appendFile('test.js?id=123&foo=bar');\n\nand \n\n$this->headStyle()->setAutoEscape(true)->appendStylesheet('\/css\/rules.css?id=123&foo=bar');\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=sidhighwind",
                        "name": "sidhighwind",
                        "displayName": "Jon Whitcraft",
                        "active": true
                    },
                    "created": "2008-10-22T09:01:29.000+0000",
                    "updated": "2008-10-22T09:01:29.000+0000"
                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/25304",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=sidhighwind",
                        "name": "sidhighwind",
                        "displayName": "Jon Whitcraft",
                        "active": true
                    },
                    "body": "the proper one for the style sheet is\n\n{code}\n$this->headLink()->setAutoEscape(true)->appendStylesheet('\/css\/rules.css?id=123&foo=bar');\n{code}",
