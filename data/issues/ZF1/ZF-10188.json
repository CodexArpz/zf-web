            "type": "java.lang.String",
            "value": "View script:\r\n{code}\r\n<!-- foo -->\r\n<?= $this->customDijit()->captureStart(\r\n    'foo',\r\n    array(\r\n        'dojoType' => 'dijit.Dialog',\r\n        'title'    => 'Foo'\r\n    )\r\n) ?>\r\n\r\n<!-- bar -->\r\n<?= $this->customDijit(\r\n    'bar',\r\n    'Bar',\r\n    array(\r\n        'dojoType' => 'dijit.ProgressBar',\r\n        'title'    => 'Bar'\r\n    )\r\n) ?>\r\n<!-- \/bar -->\r\n\r\n<?= $this->customDijit()->captureEnd('foo') ?>\r\n<!-- \/foo -->\r\n{code}\r\n\r\nExpected result \"declarative\":\r\n{code}\r\n<!-- foo -->\r\n<div id=\"foo\" title=\"Foo\" dojoType=\"dijit.Dialog\">\r\n<!-- bar -->\r\n<div id=\"bar\" title=\"Bar\" dojoType=\"dijit.ProgressBar\">Bar<\/div>\r\n<!-- \/bar -->\r\n<\/div>\r\n<!-- \/foo -->\r\n{code}\r\n\r\nActual result \"declarative\":\r\n{code}\r\n<!-- foo -->\r\n<div id=\"foo\" title=\"Foo\" dojoType=\"dijit.ProgressBar\">\r\n<!-- bar -->\r\n<div id=\"bar\" title=\"Bar\" dojoType=\"dijit.ProgressBar\">Bar<\/div>\r\n<!-- \/bar -->\r\n\r\n<\/div>\r\n<!-- \/foo -->\r\n{code}\r\n\r\n\r\nExpected result \"programmatic\":\r\n{code}\r\n<script type=\"text\/javascript\">\r\n\/\/<![CDATA[\r\ndojo.require(\"dijit.ProgressBar\");\r\n    dojo.require(\"dojo.parser\");\r\ndojo.addOnLoad(function() {\r\n    dojo.forEach(zendDijits, function(info) {\r\n        var n = dojo.byId(info.id);\r\n        if (null != n) {\r\n            dojo.attr(n, dojo.mixin({ id: info.id }, info.params));\r\n        }\r\n    });\r\n    dojo.parser.parse();\r\n});\r\n;\r\n    var zendDijits = [{\"id\":\"bar\",\"params\":{\"title\":\"Bar\",\"dojoType\":\"dijit.Dialog\"}},{\"id\":\"foo\",\"params\":{\"title\":\"Foo\",\"dojoType\":\"dijit.ProgressBar\"}}];\r\n\/\/]]>\r\n\r\n<\/script>\t\r\n<\/head>\r\n\r\n<body class=\"soria\">\r\n\r\n<!-- foo -->\r\n<div id=\"foo\">\r\n<!-- bar -->\r\n<div id=\"bar\">Bar<\/div>\r\n<!-- \/bar -->\r\n\r\n<\/div>\r\n<!-- \/foo -->\r\n\r\n{code}\r\n\r\nActual result \"programmatic\":\r\n{code}\r\n<script type=\"text\/javascript\">\r\n\/\/<![CDATA[\r\ndojo.require(\"dijit.ProgressBar\");\r\n    dojo.require(\"dojo.parser\");\r\ndojo.addOnLoad(function() {\r\n    dojo.forEach(zendDijits, function(info) {\r\n        var n = dojo.byId(info.id);\r\n        if (null != n) {\r\n            dojo.attr(n, dojo.mixin({ id: info.id }, info.params));\r\n        }\r\n    });\r\n    dojo.parser.parse();\r\n});\r\n;\r\n    var zendDijits = [{\"id\":\"bar\",\"params\":{\"title\":\"Bar\",\"dojoType\":\"dijit.ProgressBar\"}},{\"id\":\"foo\",\"params\":{\"title\":\"Foo\",\"dojoType\":\"dijit.ProgressBar\"}}];\r\n\/\/]]>\r\n\r\n<\/script>\t<\/head>\r\n\r\n<body class=\"soria\">\r\n\r\n<!-- foo -->\r\n<div id=\"foo\">\r\n<!-- bar -->\r\n<div id=\"bar\">Bar<\/div>\r\n<!-- \/bar -->\r\n\r\n<\/div>\r\n<!-- \/foo -->\r\n{code}"
