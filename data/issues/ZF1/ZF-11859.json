                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=avantis",
                        "name": "avantis",
                        "displayName": "Cristian Bichis",
                        "active": true
                    },
                    "body": "Fix is to update Zend_Dojo_Form_Element_Dijit:\r\n{code}\r\n    public function loadDefaultDecorators()\r\n    {\r\n        if ($this->loadDefaultDecoratorsIsDisabled()) {\r\n            return;\r\n        }\r\n\r\n        $decorators = $this->getDecorators();\r\n        if (empty($decorators)) {\r\n            $this->addDecorator('DijitElement')\r\n                 ->addDecorator('Errors')\r\n                 ->addDecorator('Description', array('tag' => 'p', 'class' => 'description'))\r\n                 ->addDecorator('HtmlTag', array('tag' => 'dd'))\r\n                 ->addDecorator('Label', array('tag' => 'dt'));\r\n        }\r\n    }\r\n{code}\r\n\r\nto\r\n\r\n{code}\r\n    public function loadDefaultDecorators()\r\n    {\r\n        if ($this->loadDefaultDecoratorsIsDisabled()) {\r\n            return;\r\n        }\r\n\r\n        $decorators = $this->getDecorators();\r\n        if (empty($decorators)) {\r\n            $this->addDecorator('DijitElement')\r\n                 ->addDecorator('Errors')\r\n                 ->addDecorator('Description', array('tag' => 'p', 'class' => 'description'))\r\n                 ->addDecorator('HtmlTag', array('tag' => 'dd'))\r\n                 ->addDecorator('Label', array('tag' => 'dt', 'id'  => array('callback' => array(get_class($this), 'resolveElementId'))));\r\n        }\r\n    }\r\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=avantis",
                        "name": "avantis",
                        "displayName": "Cristian Bichis",
                        "active": true
