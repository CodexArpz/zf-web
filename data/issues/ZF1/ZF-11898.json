        "description": {
            "name": "description",
            "type": "java.lang.String",
            "value": "in file Zend_Db_Adapter_Pdo_Mssql in method _dsn()\r\nput this changes\r\n{code}\r\n            switch (strtolower($dsn['pdoType'])) {\r\n                case 'freetds':\r\n                case 'sybase':\r\n                    $this->_pdoType = 'sybase';\r\n                    break;\r\n                case 'mssql':\r\n                    $this->_pdoType = 'mssql';\r\n                    break;\r\n\t\t\t\tcase 'sqlsrv':\r\n                    $this->_pdoType = 'sqlsrv';\r\n                    unset($dsn['charset']);\r\n                    break;\r\n                case 'dblib':\r\n                default:\r\n                    $this->_pdoType = 'dblib';\r\n                    break;\r\n            }\r\n            unset($dsn['pdoType']);\r\n        }\r\n\r\n        \/\/ use all remaining parts in the DSN\r\n        foreach ($dsn as $key => $val) {\r\n\t\t\tif($key == 'dbname' && $this->_pdoType == 'sqlsrv'){\r\n\t\t\t\t$dsn[$key] = \"Database=$val\";\r\n\t\t\t} elseif($key == 'host' && $this->_pdoType == 'sqlsrv'){\r\n\t\t\t    $dsn[$key] = \"server=$val\";\r\n\t\t\t}else {\r\n\t\t\t\t$dsn[$key] = \"$key=$val\";\r\n\t\t\t}\r\n        }\r\n\r\n{code}"
