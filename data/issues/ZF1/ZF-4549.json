            "type": "com.atlassian.jira.issue.fields.CommentSystemField",
            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/25167",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=doctorrock83",
                        "name": "doctorrock83",
                        "displayName": "julien PAULI",
                        "active": true
                    },
                    "body": "This is done because of AcceptPathInfo directive of Apache.\n\nPersons who cant use mod_rewrite can use this directive to jump over the index.php and make it part of the baseUrl.\nAs an exemple :\nhttp:\/\/somehost\/route\/from\/here works when mod_rewrite is activated\nhttp:\/\/somehost\/indexbootstrap.php\/route\/from\/here works when mod_rewrite is not activated but acceptPathInfo turned to on",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=doctorrock83",
                        "name": "doctorrock83",
                        "displayName": "julien PAULI",
                        "active": true
                    },
                    "created": "2008-10-15T14:05:28.000+0000",
                    "updated": "2008-10-15T14:05:28.000+0000"
                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/25169",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=hinikato",
                        "name": "hinikato",
                        "displayName": "Hinikato Dubrai",
                        "active": false
                    },
                    "body": "{quote}This is done because of AcceptPathInfo directive of Apache.{quote}\nOK, but i do not have this directive, because it available in Apache 2.0.30 and later.\n\nI have mod_rewrite turned on and expect Zend_Controller_Request_Http::getBaseUrl() will return \/ if user requested http:\/\/somehost\/index.php file.",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=hinikato",
                        "name": "hinikato",
                        "displayName": "Hinikato Dubrai",
                        "active": false
                    },
                    "created": "2008-10-15T15:46:41.000+0000",
