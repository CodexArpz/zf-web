                },
                {
                    "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/comment\/11856",
                    "author": {
                        "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/user?username=videinfra",
                        "name": "videinfra",
                        "displayName": "Roman Roan",
                        "active": true
                    },
                    "body": "Patch:\n\n{code}\n\nIndex: \/Zend\/Mail\/Transport\/Abstract.php\n===================================================================\n--- \/Zend\/Mail\/Transport\/Abstract.php (revision 273)\n+++ \/Zend\/Mail\/Transport\/Abstract.php (revision 274)\n@@ -130,10 +130,13 @@\n         if (null !== $boundary) {\n             \/\/ Build multipart mail\n-            if ($this->_mail->hasAttachments) {\n-                $type = Zend_Mime::MULTIPART_MIXED;\n-            } elseif ($this->_mail->getBodyText() && $this->_mail->getBodyHtml()) {\n-                $type = Zend_Mime::MULTIPART_ALTERNATIVE;\n-            } else {\n-                $type = Zend_Mime::MULTIPART_MIXED;\n+            $type = $this->_mail->getType();\n+            if (!$type) {\n+\t            if ($this->_mail->hasAttachments) {\n+\t                $type = Zend_Mime::MULTIPART_MIXED;\n+\t            } elseif ($this->_mail->getBodyText() && $this->_mail->getBodyHtml()) {\n+\t                $type = Zend_Mime::MULTIPART_ALTERNATIVE;\n+\t            } else {\n+\t                $type = Zend_Mime::MULTIPART_MIXED;\n+\t            }\n             }\n \nIndex: \/Zend\/Mail.php\n===================================================================\n--- \/Zend\/Mail.php (revision 273)\n+++ \/Zend\/Mail.php (revision 274)\n@@ -77,4 +77,10 @@\n     protected $_charset = null;\n \n+\t \/**\n+     * Mail content type\n+     * @var string\n+     *\/\n+    protected $_type = null;\n+\n     \/**\n      * Mail headers\n@@ -172,4 +178,25 @@\n     {\n         return $this->_charset;\n+    }\n+\n+    \/**\n+     * Sets Content-type of the message\n+     *\n+     * @param string $email\n+     *\/\n+    public function setType($type)\n+    {\n+        $this->_type = $type;\n+    }\n+\n+    \/**\n+     * Return content type\n+     * \n+     * @access public\n+     * @return string\n+     *\/\n+    public function getType()\n+    {\n+        return $this->_type;\n     }\n \n\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/user?username=videinfra",
                        "name": "videinfra",
                        "displayName": "Roman Roan",
                        "active": true
                    },
                    "created": "2006-12-12T05:49:31.000+0000",
                    "updated": "2006-12-12T05:49:31.000+0000"
                },
                {
