            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/29563",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=tfountain",
                        "name": "tfountain",
                        "displayName": "Tim Fountain",
                        "active": true
                    },
                    "body": "The Ruby on Rails equivalent of this helper uses the partial filename to infer the variable name. So in Rails you'd do something like:\n\n<%= render :partial => 'user', :collection => @users %>\n\neach user object would then be stored in a variable called 'user' for use in the partial. So this would be an alternative solution.",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=tfountain",
                        "name": "tfountain",
                        "displayName": "Tim Fountain",
                        "active": true
                    },
                    "created": "2009-03-18T15:11:22.000+0000",
                    "updated": "2009-03-18T15:11:22.000+0000"
