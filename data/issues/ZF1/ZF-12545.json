                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/53382",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=frosch",
                        "name": "frosch",
                        "displayName": "Frank Br\u00fcckner",
                        "active": true
                    },
                    "body": "Okay, now we use only {{Zend_Config}}. Add to your bootstrap class:\r\n{code}\r\nprotected function _initTest()\r\n{\r\n    $config = new Zend_Config_Ini(APPLICATION_PATH . '\/configs\/application.ini');\r\n    var_dump($config->production->resources->db->toArray());\r\n}\r\n{code}",
                    "updateAuthor": {
