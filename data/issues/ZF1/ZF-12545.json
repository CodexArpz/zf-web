                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/53380",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=frosch",
                        "name": "frosch",
                        "displayName": "Frank Br\u00fcckner",
                        "active": true
                    },
                    "body": "Please test in your bootstrap class:\r\n\r\n{code}\r\nprotected function _initTest()\r\n{\r\n    $this->bootstrap('db');\r\n    var_dump($this->getResource('db')->getConfig());\r\n}\r\n{code}",
                    "updateAuthor": {
