            "type": "com.atlassian.jira.issue.fields.CommentSystemField",
            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/40525",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=coudenysj",
                        "name": "coudenysj",
                        "displayName": "Jachim Coudenys",
                        "active": false
                    },
                    "body": "It looks like all the tags in the {{$_simpleTags}} property suffer from this.\r\n\r\nThe check for tags only searches for 1 occurence (not enclosed tags).\r\n\r\n{code}\r\n$textile = Zend_Markup::factory('Textile');\r\n\r\necho $textile->render('Hi!');\r\n\/\/ <p>Hi<\/p>\r\n\r\necho $textile->render('!Hi');\r\n\/\/ <p><img src=\"http:\/\/Hi\" alt=\"\" \/><\/p>\r\n\r\necho $textile->render('Hi*');\r\n\/\/ <p>Hi<\/p>\r\n\r\necho $textile->render('*Hi');\r\n\/\/ <p><strong>Hi<\/strong><\/p>\r\n\r\necho $textile->render('Hi! Check out \"this link\":http:\/\/google.com. Yay!');\r\n\/\/ <p>Hi<img src=\"http:\/\/ Check out &amp;quot;this link&amp;quot;:http:\/\/google.com. Yay\" alt=\"google\" \/><\/p>\r\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=coudenysj",
                        "name": "coudenysj",
                        "displayName": "Jachim Coudenys",
