            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/45868",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=micxer",
                        "name": "micxer",
                        "displayName": "Michael Weinrich",
                        "active": true
                    },
                    "body": "This happens when the parameter is type-casted into an array so if {{$params = null}} this gets converted into an array having an empty element.\r\n\r\n\r\nThe path:\r\n{code}\r\nIndex: Zend\/XmlRpc\/Client.php\r\n===================================================================\r\n--- Zend\/XmlRpc\/Client.php\t(revision 8510)\r\n+++ Zend\/XmlRpc\/Client.php\t(working copy)\r\n@@ -307,7 +307,7 @@\r\n      *\/\r\n     public function call($method, $params=array())\r\n     {\r\n-        if (!$this->skipSystemLookup() && ('system.' != substr($method, 0, 7))) {\r\n+        if (!is_null($params) && !$this->skipSystemLookup() && ('system.' != substr($method, 0, 7))) {\r\n             \/\/ Ensure empty array\/struct params are cast correctly\r\n             \/\/ If system.* methods are not available, bypass. (ZF-2978)\r\n             $success = true;\r\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=micxer",
                        "name": "micxer",
                        "displayName": "Michael Weinrich",
                        "active": true
                    },
                    "created": "2011-04-14T13:36:25.000+0000",
                    "updated": "2011-04-14T13:36:25.000+0000"
                }
            ]
        }
