                    "body": "{code}\r\nclass My_View implements Zend_View_Interface {...}\r\n$form = new Zend_Form(array('view' => new My_View()));\r\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=mim",
                        "name": "mim",
                        "displayName": "Mark Maynereid",
                        "active": true
