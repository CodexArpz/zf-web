                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/43179",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=richardtuin",
                        "name": "richardtuin",
                        "displayName": "Richard Tuin",
                        "active": true
                    },
                    "body": "The setOptions method in Zend_Form does not enable the user to pass a view object in the array.\r\nIn fact, it explicitly ignores the view object.\r\n\r\nZend_Form::setView needs to be called explicitly to use the custom implementation of Zend_View_Interface.",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=richardtuin",
                        "name": "richardtuin",
                        "displayName": "Richard Tuin",
                        "active": true
                    },
                    "created": "2010-11-20T03:26:51.000+0000",
                    "updated": "2010-11-20T03:26:51.000+0000"
                },
                {
