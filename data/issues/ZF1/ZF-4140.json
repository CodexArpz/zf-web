            "type": "com.atlassian.jira.issue.fields.CommentSystemField",
            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/24299",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=pengu",
                        "name": "pengu",
                        "displayName": "J\u00e9r\u00e9my Lajotte",
                        "active": true
                    },
                    "body": "To validate only the file we are interesting in ( $this->getName() ) and return true if :\n 1 : the validation only failed because no file were uploaded (Zend_Validate_File_Upload::NO_FILE )\nAND\n 2 : the file were not required (isRequired() == false)\n\nAlso clean the error ( $adapter->clearErrors() ) so no error message will be displayed on the form for a non required file input.",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=pengu",
                        "name": "pengu",
                        "displayName": "J\u00e9r\u00e9my Lajotte",
                        "active": true
                    },
