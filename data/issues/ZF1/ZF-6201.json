            "type": "com.atlassian.jira.issue.fields.CommentSystemField",
            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/29894",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=josiah",
                        "name": "josiah",
                        "displayName": "Josiah Truasheim",
                        "active": true
                    },
                    "body": "I am working on a patch for this issue for my local copy of the zend framework (v1.7.8) I will post the source code when complete.",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=josiah",
                        "name": "josiah",
                        "displayName": "Josiah Truasheim",
                        "active": true
                    },
                    "created": "2009-04-02T22:07:34.000+0000",
                    "updated": "2009-04-02T22:07:34.000+0000"
                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/29896",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=josiah",
                        "name": "josiah",
                        "displayName": "Josiah Truasheim",
                        "active": true
                    },
                    "body": "\/\/ To fix this issue replace Zend\/View\/Helper\/Partial.php (lines 75:82 inclusive) with the following\n            require_once 'Zend\/Controller\/Action\/HelperBroker.php';\n        \t  $viewRenderer = Zend_Controller_Action_HelperBroker::getStaticHelper( 'viewRenderer' );\n        \t  \/\/ Load the inflector from the view renderer.\n        \t  $inflector = clone $viewRenderer->getInflector();\n        \t  $basePathSpec = $viewRenderer->getViewBasePathSpec();\n        \t  \/\/ Set the target of the inflector so that it does not affect the\n        \t  \/\/ view renderer. \n        \t  $inflector->setTarget( $basePathSpec );\n        \t  \/\/ Set the path parts from the current request and dispatcher\n        \t  $request = $viewRenderer->getRequest();\n        \t  $dispatcher = $viewRenderer->getFrontController()->getDispatcher();\n        \t  $parts = array(\n                'module'     => $module,\n                'controller' => $request->getControllerName(),\n                'action'     => $dispatcher->formatActionName($request->getActionName())\n            );\n            \/\/ Filter the path using the inflector\n            $path = $inflector->filter($parts);\n            \/\/ Add the base path to the view\n            \/\/  -- Isn't this practice inherintly dangerious because views could\n            \/\/     be inadvertantly used from the new module path?\n            \/\/     Would it not be better to create a new renderPath() method in\n            \/\/     the view that renders an absolute path using the view?\n            $view->addBasePath($path);",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=josiah",
                        "name": "josiah",
                        "displayName": "Josiah Truasheim",
                        "active": true
                    },
                    "created": "2009-04-02T23:00:10.000+0000",
                    "updated": "2009-04-02T23:00:10.000+0000"
                },
                {
