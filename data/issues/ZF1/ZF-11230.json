                    },
                    "body": "{code}\r\n$from = new Zend_Date();\r\nprint $from->getIso();\r\n{code}\r\noutputs\r\n{noformat}2011-03-27T23:04:32+03:00{noformat} \r\n\r\n\r\nand\r\n{code}\r\n$from->set('00:00:00', Zend_Date::TIMES);\r\nprint $from->getIso();\r\n{code}\r\noutputs\r\n{noformat}\r\n2011-03-26T23:00:00+02:00\r\n{noformat} ",
