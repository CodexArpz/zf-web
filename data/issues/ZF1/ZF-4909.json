                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/26493",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=matthew",
                        "name": "matthew",
                        "displayName": "Matthew Weier O'Phinney",
                        "active": true
                    },
                    "body": "The basic issue was that the reporter wanted to execute a different action if the home page were hit. The following plugin accomplishes it:\n{code}\nclass My_Plugin_RouteToIndex extends Zend_Controller_Plugin_Abstract\n{\n    public function dispatchLoopStartup(Zend_Controller_Request_Abstract $request)\n    {\n        if (('default' == $request->getModuleName())\n            && ('index' == $request->getControllerName())\n            && ('index' == $request->getActionName())\n        ) {\n            $request->setModuleName('signup')\n                    ->setControllerName('signup')\n                    ->setActionName('test');\n        }\n    }\n}\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=matthew",
                        "name": "matthew",
                        "displayName": "Matthew Weier O'Phinney",
                        "active": true
                    },
                    "created": "2008-11-19T10:39:16.000+0000",
                    "updated": "2008-11-19T10:39:16.000+0000"
                }
            ]
