            "type": "com.atlassian.jira.issue.fields.CommentSystemField",
            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/20609",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=zendfw",
                        "name": "zendfw",
                        "displayName": "Shekar Reddy",
                        "active": true
                    },
                    "body": "Zend_Cache_SQLite is creating sqlite2 databases probably because it is using the library:\nhttp:\/\/www.php.net\/manual\/en\/ref.sqlite.php\n\nTo create sqlite3 databases, it may have to use:\nhttp:\/\/www.php.net\/manual\/en\/ref.pdo-sqlite.php",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=zendfw",
