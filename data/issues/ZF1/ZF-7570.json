                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=richardjohn",
                        "name": "richardjohn",
                        "displayName": "Richard John",
                        "active": true
                    },
                    "body": "Hi Danail,\r\n\r\nNo problem, feel free to email me if you need any assistance!\r\n\r\nBest wishes,\r\nRichard",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=richardjohn",
