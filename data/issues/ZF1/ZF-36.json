                {
                    "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/comment\/10069",
                    "author": {
                        "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/user?username=zend_framework",
                        "name": "zend_framework",
                        "displayName": "Zend Framework",
                        "active": true
                    },
                    "body": "{code}\n\nPossible solution:-\n\nExisting code:-\n\n    public function describeTable($table)\n    {\n        $sql = \"DESCRIBE $table\";\n        $result = $this->fetchAll($sql);\n        $descr = array();\n        foreach ($result as $key => $val) {\n            $descr[$val['field']] = array(\n                'name'    => $val['field'],\n                'type'    => $val['type'],\n                'notnull' => (bool) ($val['null'] != 'YES'), \/\/ not null is NO or empty, null is YES\n\n                'default' => $val['default'],\n                'primary' => (strtolower($val['key']) == 'pri'),\n            );\n        }\n        return $descr;\n    }\n\nReplace with:-\n\n    public function describeTable($table)\n    {\n        $sql = \"DESCRIBE $table\";\n        $result = $this->query($sql);\n        $result = $result->fetchAll(PDO::FETCH_ASSOC);\n        $descr = array();\n        foreach ($result as $key => $val) {\n            $descr[$val['field']] = array(\n                'name'    => $val['field'],\n                'type'    => $val['type'],\n                'notnull' => (bool) ($val['null'] != 'YES'), \/\/ not null is NO or empty, null is YES\n\n                'default' => $val['default'],\n                'primary' => (strtolower($val['key']) == 'pri'),\n            );\n        }\n        return $descr;\n    }\n\n{code}",
