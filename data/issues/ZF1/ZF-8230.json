                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/35802",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=sgehrig",
                        "name": "sgehrig",
                        "displayName": "Stefan Gehrig",
                        "active": true
                    },
                    "body": "The options should be fine. Could you please provide some sample code of what you're doing so that I can build a test-case to replicate your issue?",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=sgehrig",
                        "name": "sgehrig",
                        "displayName": "Stefan Gehrig",
                        "active": true
                    },
                    "created": "2009-11-05T09:47:52.000+0000",
                    "updated": "2009-11-05T09:47:52.000+0000"
                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/35803",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=primolan",
                        "name": "primolan",
                        "displayName": "Rodrigo Novelo Primolan",
                        "active": true
                    },
                    "body": "Options\r\n\r\n{code}\r\nldap.default.host = \"primolan.primolan.com.br\"\r\nldap.default.accountDomainName = \"primolan.com.br\"\r\nldap.default.accountDomainNameShort = \"primolan\"\r\nldap.default.accountCanonicalForm = 3\r\nldap.default.baseDn = \"DC=primolan, DC=primolan, DC=com, DC=br\"\r\n{code}\r\n\r\nLogin\r\n\r\n{code}\r\n$auth = Zend_Auth::getInstance()->setStorage(new Zend_Auth_Storage_Session($this->getRequest()->getModuleName()));\r\n$adapter = new Zend_Auth_Adapter_Ldap($options, $params['username'], $params['password']);\r\n$result = $auth->authenticate($adapter);\r\n$ldap = $adapter->getLdap();\r\n{code}\r\n\r\nSearch\r\n\r\n{code}\r\n$ldap->bind($username, $password);\r\n$result = $ldap->searchEntries($filters, $ldap->getBaseDn(), Zend_Ldap::SEARCH_SCOPE_SUB);\r\n{code}\r\n\r\nWithout that _$ldap->bind()_, searchEntries doesn't work.",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=primolan",
                        "name": "primolan",
                        "displayName": "Rodrigo Novelo Primolan",
                        "active": true
                    },
                    "created": "2009-11-05T09:55:39.000+0000",
                    "updated": "2009-11-05T09:55:39.000+0000"
                },
                {
