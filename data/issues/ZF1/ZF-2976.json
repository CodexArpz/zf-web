                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/21545",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=anpeters",
                        "name": "anpeters",
                        "displayName": "Anders Petersen",
                        "active": true
                    },
                    "body": "The suggested fix does not work on names like \"mainProducts[]\" (to submit arrays when using Zend_View_Helper_FormMultiCheckbox). It would generate an id like \"mainProducts[]-product1\", which is invalid according to W3C. I used this instead:\n\\\\\n\\\\\n{noformat}\n                    . ' id=\"' . rtrim(preg_replace('\/\\[([^\\]]*)\\]\/', '-$1', $name), '-') .'-'. $this->view->escape($opt_value) . '\"' \/\/add this line\n{noformat}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=anpeters",
                        "name": "anpeters",
                        "displayName": "Anders Petersen",
                        "active": true
                    },
                    "created": "2008-05-02T12:11:52.000+0000",
                    "updated": "2008-05-02T12:11:52.000+0000"
                },
                {
