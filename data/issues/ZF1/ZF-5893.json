            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/29140",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=neo123",
                        "name": "neo123",
                        "displayName": "Vik Paul",
                        "active": true
                    },
                    "body": "\nI changed:\n\n..\/library\/Zend\/Db\/Adapter\/Pdo\/Oci.php\n  line 89:  replaced SID with SERVICE_NAME\n\nIt is working fine now.",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=neo123",
                        "name": "neo123",
                        "displayName": "Vik Paul",
                        "active": true
