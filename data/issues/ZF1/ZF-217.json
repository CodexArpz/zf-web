            "type": "com.atlassian.jira.issue.fields.CommentSystemField",
            "value": [
                {
                    "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/comment\/10531",
                    "author": {
                        "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/user?username=sloat",
                        "name": "sloat",
                        "displayName": "Matt Schmidt",
                        "active": true
                    },
                    "body": "It must be the database server not allowing the table name to be a placeholder. I just tried it with raw PDO and SQLite and got the same result with insert, select, etc. It could vary from RDBMS to RDBMS, but I have no idea. I wouldn't call this a critical bug, in any case.",
                    "updateAuthor": {
                        "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/user?username=sloat",
                        "name": "sloat",
                        "displayName": "Matt Schmidt",
                        "active": true
                    },
                    "created": "2006-07-16T01:42:39.000+0000",
                    "updated": "2006-07-16T01:42:39.000+0000"
                },
                {
                    "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/comment\/11144",
                    "author": {
                        "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/user?username=bkarwin",
                        "name": "bkarwin",
                        "displayName": "Bill Karwin",
                        "active": true
                    },
                    "body": "It is never legal in SQL to use a placeholder for a table name.  A placeholder can be used for a single value, not table names or any other syntactic element of a SQL statement.",
                    "updateAuthor": {
                        "self": "http:\/\/framework.zend.com\/issues\/rest\/api\/latest\/user?username=bkarwin",
                        "name": "bkarwin",
                        "displayName": "Bill Karwin",
                        "active": true
                    },
                    "created": "2006-11-04T07:13:34.000+0000",
                    "updated": "2006-11-04T07:13:34.000+0000"
                }
            ]
        }
