                    "body": "related tickets:\r\nhttp:\/\/framework.zend.com\/issues\/browse\/ZF-8944\r\nand\r\nhttp:\/\/framework.zend.com\/issues\/browse\/ZF-10598",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=loconut",
                        "name": "loconut",
                        "displayName": "The Lone Coder",
