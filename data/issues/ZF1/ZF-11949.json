        "comment": {
            "name": "comment",
            "type": "com.atlassian.jira.issue.fields.CommentSystemField",
            "value": [
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/49510",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=thomas",
                        "name": "thomas",
                        "displayName": "Thomas Weidner",
                        "active": true
                    },
                    "body": "There is a limitation from PHP itself, which is handles by the upload validator.\r\nThe upload validator returns only the error which is produced by the upload itself... it is limited by php's internal settings.\r\nYou can expect this to be sort of a hardware limitation.\r\n\r\nAnd then you can set a own (softwarebased) file size limitation.\r\nThe FilesSize validator gets only involved when the files have been uploaded to the server.\r\n\r\nSo as conclusion:\r\nUpload validator => BEFORE the file has been uploaded to the server\r\nFilesSize => AFTER the file has been uplaoded to the server\r\n\r\nThis is not a failure. It is a limitation of php itself.\r\nAnd that's also the reason why you get 2 different messages in return.\r\nOne before the file is on the server (there is a upload-problem by php), and one after validating the file which is already uploaded.",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=thomas",
                        "name": "thomas",
                        "displayName": "Thomas Weidner",
                        "active": true
                    },
                    "created": "2012-01-15T13:19:24.000+0000",
                    "updated": "2012-01-15T13:19:24.000+0000"
                }
            ]
        }
