                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=adamlundrigan",
                        "name": "adamlundrigan",
                        "displayName": "Adam Lundrigan",
                        "active": true
                    },
                    "body": "Looks good to me...patches apply cleanly and all Navigation and View_Helper tests pass.  As this changes the ID normalization, is there a test in place to ensure that the default normalization result is still the same as it was previously?",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=adamlundrigan",
                        "name": "adamlundrigan",
                        "displayName": "Adam Lundrigan",
                        "active": true
                    },
                    "created": "2012-06-06T13:19:03.000+0000",
                    "updated": "2012-06-06T13:19:03.000+0000"
                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/51009",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=frosch",
                        "name": "frosch",
                        "displayName": "Frank Br\u00fcckner",
                        "active": true
                    },
                    "body": "Hi Adam,\r\nyes: {{testSetPrefixForIdWithNull()}}.\r\n\r\n{code:title=Old code}\r\nprotected function _normalizeId($value)\r\n{\r\n    $prefix = get_class($this);\r\n    $prefix = strtolower(trim(substr($prefix, strrpos($prefix, '_')), '_'));\r\n\r\n    return $prefix . '-' . $value;\r\n}\r\n{code}\r\n{code:title=New code}\r\nprotected $_prefixForId = null;\r\n\r\nprotected $_skipPrefixForId = false;\r\n\r\npublic function getPrefixForId()\r\n{\r\n    if (null === $this->_prefixForId) {\r\n        $prefix             = get_class($this);\r\n        $this->_prefixForId = strtolower(\r\n            trim(substr($prefix, strrpos($prefix, '_')), '_')\r\n        ) . '-';\r\n    }\r\n\r\n    return $this->_prefixForId;\r\n}\r\n\r\nprotected function _normalizeId($value)\r\n{        \r\n    if (false === $this->_skipPrefixForId) {\r\n        $prefix = $this->getPrefixForId();\r\n \r\n        if (strlen($prefix)) {\r\n            return $prefix . $value;\r\n        }\r\n    }\r\n    \r\n    return parent::_normalizeId($value);\r\n}\r\n{code}",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=frosch",
                        "name": "frosch",
                        "displayName": "Frank Br\u00fcckner",
                        "active": true
                    },
                    "created": "2012-06-06T15:14:34.000+0000",
