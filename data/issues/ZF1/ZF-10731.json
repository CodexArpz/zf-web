                },
                {
                    "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/comment\/43276",
                    "author": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=kaiuwe",
                        "name": "kaiuwe",
                        "displayName": "Kai Uwe",
                        "active": true
                    },
                    "body": "*@Martin Keckeis*\r\nPlease use code tags! Thanks.\r\n\r\nHere's is my suggestion:\r\n{code}\r\npublic function addDisplayGroup(array $elements, $name, $options = null)\r\n{\r\n    $group = array();\r\n    foreach ($elements as $element) {\r\n        $elementName = null;\r\n        \r\n        if (is_string($element)) {\r\n            $elementName = $element;\r\n        }\r\n        \r\n        if ($element instanceof Zend_Form_Element) {\r\n            $elementName = $element->getName();\r\n            \r\n            if (!isset($this->_elements[$elementName])) {\r\n                $this->addElement($element);\r\n            }\r\n        }\r\n        \r\n        if (isset($this->_elements[$elementName])) {\r\n            $add = $this->getElement($elementName);\r\n            if (null !== $add) {\r\n                $group[] = $add;\r\n            }\r\n        }\r\n    }\r\n}\r\n{code}\r\n",
                    "updateAuthor": {
                        "self": "http:\/\/fw02.zend.com\/issues\/rest\/api\/latest\/user?username=kaiuwe",
                        "name": "kaiuwe",
                        "displayName": "Kai Uwe",
                        "active": true
                    },
                    "created": "2010-11-23T09:39:02.000+0000",
                    "updated": "2010-11-23T09:39:02.000+0000"
                },
                {
