        "description": {
            "name": "description",
            "type": "java.lang.String",
            "value": "Component: Zend\\Validator\\Callback\r\n\r\nThis is the inputFilter:\r\n\r\n{code}\r\n$this->add($factory->createInput(array(\r\n    'name'       => 'username',\r\n    'required'   => true,\r\n    'filters'    => array(\r\n        array(\r\n            'name'    => 'StripTags',\r\n        ),\r\n    ),\r\n    'validators' => array(\r\n        array(\r\n            'name'              => 'Callback',\r\n            'options'           => array(\r\n                'callback'      => array($model, 'userNameAvilable'),\r\n            'callbackOptions'   => array('value I need'),\r\n                'messages'   => array(\r\n                    'callbackValue'  => \"This username is already taken\",\r\n                ),\r\n            ),\r\n        ),\r\n    ),\r\n)));\r\n{code}\r\n\r\nIf I dump Zend\\Validator\\Callback at Line 144\r\nvar_dump(array_merge($args, $options)); die();\r\n\r\nI get\r\n{code}\r\narray(3) {\r\n  [0]=>\r\n  string(17) \"invented_username\"\r\n  [1]=>\r\n  array(7) {\r\n    [\"username\"]=>\r\n    string(17) \"invented_username\"\r\n    [\"password\"]=>\r\n    string(0) \"\"\r\n    [\"email\"]=>\r\n    string(0) \"\"\r\n    [\"fname\"]=>\r\n    string(0) \"\"\r\n    [\"lname\"]=>\r\n    string(0) \"\"\r\n    [\"role\"]=>\r\n    string(7) \"student\"\r\n    [\"Send\"]=>\r\n    string(4) \"Send\"\r\n  }\r\n  [2]=>\r\n  string(12) \"value I need\"\r\n}\r\n{code}"
