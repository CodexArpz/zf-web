        "description": {
            "name": "description",
            "type": "java.lang.String",
            "value": "Zend\\Db\\Sql\\Select::processOrder() always add quote identifier to order's values.\r\n\r\n{code:title=Actual Zend\\Db\\Sql\\Select::processOrder()}\r\nprotected function processOrder(PlatformInterface $platform, Adapter $adapter = null, ParameterContainer $parameterContainer = null)\r\n    {\r\n        if (empty($this->order)) {\r\n            return null;\r\n        }\r\n        $orders = array();\r\n        foreach ($this->order as $k => $v) {\r\n            if (is_int($k)) {\r\n                if (strpos($v, ' ') !== false) {\r\n                    list($k, $v) = preg_split('# #', $v, 2);\r\n                } else {\r\n                    $k = $v;\r\n                    $v = self::ORDER_ASCENDING;\r\n                }\r\n            }\r\n            if (strtoupper($v) == self::ORDER_DESENDING) {\r\n                $orders[] = array($platform->quoteIdentifierInFragment($k), self::ORDER_DESENDING);\r\n            } else {\r\n                $orders[] = array($platform->quoteIdentifierInFragment($k), self::ORDER_ASCENDING);\r\n            }\r\n        }\r\n        return array($orders);\r\n    }\r\n{code}\r\n\r\n{code:title=First proposal Zend\\Db\\Sql\\Select::processOrder()}\r\nprotected function processOrder(PlatformInterface $platform, Adapter $adapter = null, ParameterContainer $parameterContainer = null)\r\n    {\r\n        if (empty($this->order)) {\r\n            return null;\r\n        }\r\n        $orders = array();\r\n        foreach ($this->order as $k => $v) {\r\n            if (is_int($k) && is_string($v)) {\r\n                if (strpos($v, ' ') !== false) {\r\n                    list($k, $v) = preg_split('# #', $v, 2);\r\n                } else {\r\n                    $k = $v;\r\n                    $v = self::ORDER_ASCENDING;\r\n                }\r\n                \r\n                if (strtoupper($v) == self::ORDER_DESENDING) {\r\n                    $orders[] = array($platform->quoteIdentifierInFragment($k), self::ORDER_DESENDING);\r\n                } else {\r\n                    $orders[] = array($platform->quoteIdentifierInFragment($k), self::ORDER_ASCENDING);\r\n                }\r\n            }\r\n            elseif(is_a($v,'Zend\\Db\\Sql\\Expression')) {\r\n                $v = $v->getExpression();\r\n                if (strpos($v, ' ') !== false) {\r\n                    list($k, $v) = preg_split('# #', $v, 2);\r\n                } else {\r\n                    $k = $v;\r\n                    $v = self::ORDER_ASCENDING;\r\n                }\r\n                \r\n                if (strtoupper($v) == self::ORDER_DESENDING) {\r\n                    $orders[] = array($k, self::ORDER_DESENDING);\r\n                } else {\r\n                    $orders[] = array($k, self::ORDER_ASCENDING);\r\n                }\r\n            }\r\n        }\r\n        return array($orders);\r\n    }\r\n{code}"
