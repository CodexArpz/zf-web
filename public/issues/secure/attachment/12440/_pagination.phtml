<?php
	if ($this->pageCount) {
?>
			<div class="pagination">
<?php
		// First page link
		if (isset($this->previous)) {
			if ($this->first != 1) {
				printLn('<a href="' . $this->url . $this->page_prefix . $this->first . '" class="first">First</a>', 4);
			} else {
				printLn('<a href="' . $this->url . '" class="first">&laquo; First</a>', 4);
			}
		} else {
			printLn('<span class="disabled">&laquo; First</span>', 4);
		}
	
		// Previous page link
		if (isset($this->previous)) {
			if ($this->previous != 1) {
				printLn('<a href="' . $this->url . $this->page_prefix . $this->previous . '" class="previous">&lt; Previous</a> | ' , 4);
			} else {
				printLn('<a href="' . $this->url . '" class="previous">&lt; Previous</a> | ' , 4);
			}
		} else {
			printLn('<span class="disabled">&lt; Previous</span> | ', 4);
		}
	
		// Numbered page links
		foreach ($this->pagesInRange as $page) {
			if ($page != $this->current) {
				if ($page != 1) {
					printLn('<a href="' . $this->url . $this->page_prefix . $page . '" class="pagenum">' . $page . '</a>', 4);
				} else {
					printLn('<a href="' . $this->url . '" class="pagenum">' . $page . '</a>', 4);
				}
			} else {
				printLn('<span class="current_page">' . $page . '</span>', 4);
			}
		}
	
		// Next page link
		if (isset($this->next)) {
			printLn(' | <a href="' . $this->url . $this->page_prefix . $this->next . '" class="next">Next &gt;</a>', 4);
		} else {
			printLn(' | <span class="disabled">Next &gt;</span>', 4);
		}

		// Last page link
		if (isset($this->next)) {
			printLn('<a href="' . $this->url . $this->page_prefix .  $this->last . '" class="last">Last &raquo;</a>', 4);
		} else {
			printLn('<span class="disabled">Last &raquo;</span>', 4);
		}
?>
			</div>
			<div class="result_count">
<?php
		printLn('Showing ' . $this->firstItemNumber . ' - ' . $this->lastItemNumber . ' of ' . $this->totalItemCount . ' results (' . $this->itemCountPerPage . ' per page)', 4);
?>
			</div>
<?php
	}
?>