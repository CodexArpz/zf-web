<?xml version="1.0" encoding="UTF-8"?>
<application>
    <!-- Throw exceptions that occur during the bootstrap -->
    <throw_exceptions>1</throw_exceptions>

    <!-- Application home path -->
    <home>../application</home>

    <!-- Paths relative to application home -->
    <path>
        <cache>cache</cache>
        <modules>modules</modules>
        <sessions>sessions</sessions>
        <layouts>layouts</layouts>
        <libraries>libraries</libraries>
    </path>

    <!-- Resource namespace definitions -->
    <namespace>
        <SpotSec>SpotSec_Application_Resource</SpotSec>
        <App_Application_Resource />
    </namespace>

    <!-- Resources to load -->
    <resource>
        <!-- Class autoloader -->
        <autoload>
            <priority>0</priority>
        </autoload>

        <!-- Setup timezone -->
        <timezone>
            <priority>1</priority>
        </timezone>

        <!-- Database -->
        <db>
            <priority>2</priority>
        </db>

        <!-- Logging -->
        <log>
            <priority>3</priority>
        </log>

        <!-- Start session -->
        <session />

        <!-- Setup locale -->
        <!-- <locale /> -->
        
        <!-- Setup mailing -->
        <mail />

        <!-- View -->
        <view />
        
        <!-- Layout -->
        <layout />

        <!-- Controller -->
        <controller />
    </resource>
</application>