    <div class="body">
        <p>In a form inherited from Zend_Dojo_Form</p>

<p>$this-&gt;addElement('Editor','body',array(
            'label'        =&gt; 'Page Content',
            'inheritWidth' =&gt; 'true',
            'plugins'=&gt;array('undo','linkDialog','createLink','insertImage','fullscreen','fontName', 'fontSize','formatBlock','viewsource'),</p>

<pre><code>        )
