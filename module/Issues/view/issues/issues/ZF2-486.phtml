                        'action'     =&gt; '[a-zA-Z][a-zA-Z0-9_-]*',
                        'id'         =&gt; '[0-9]+',
                    ),
                    'defaults' =&gt; array(
                        'controller' =&gt; 'Application',
                        'action'     =&gt; 'index',
                        'locale'     =&gt; 'de',
                    ),
                ),
                'may_terminate' =&gt; true,
                'child_routes' =&gt; array(
                    'default' =&gt; array(
                        'type'    =&gt; 'Wildcard',
                        'options' =&gt; array(
                        ),
