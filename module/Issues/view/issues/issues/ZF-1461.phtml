<pre class="highlight"><code>
    public function toArray()
    {
        $array = array();
        foreach ($this-&gt;_data as $key =&gt; $value) {
            if (is_object($value)) {
                $array[$key] = $value-&gt;asArray();   &lt;----- must be $array[$key] = $value-&gt;toArray();
            } else {
                $array[$key] = $value;
            }
        }
        return $array;
    }
