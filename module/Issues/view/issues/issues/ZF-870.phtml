    /**
     * Begin a transaction.
     *
     * @return void
     */
    protected function _beginTransaction()
    {
        if ($this-&gt;_transactionCount === 0)
        {
            $this-&gt;_connect();
            $this-&gt;_connection-&gt;autocommit(false);
