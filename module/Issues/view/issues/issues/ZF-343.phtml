<pre class="highlight"><code>
$config_array = array(
    'controls' =&gt; array(
        'visible' =&gt; array(
            'name' =&gt; 'visible',
            'type' =&gt; 'checkbox',
            'attribs' =&gt; array(), // empty array
        ),
    ),
);
$form_config = new Zend_Config($config_array, true);
$form_config-&gt;controls-&gt;visible-&gt;attribs-&gt;asArray();
</code></pre>

