                     $class = $namespace . '_' . $className;
                     $file  = str_replace('_', DIRECTORY_SEPARATOR, $class) . '.php';
                     if (Zend_Loader::isReadable($file)) {
-                        Zend_Loader::loadClass($class);
+                        if (!class_exists($class)) {
+                            Zend_Loader::loadClass($class);
+                        }
                         $className = $class;
                         break;
                     }
