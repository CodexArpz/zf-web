+        $xhtml = '';
+        foreach ((array) $attribs as $key =&gt; $val) {
+            $key = htmlspecialchars($key);
+            if (is_array($val)) {
+                $val = implode(' ', $val);
+            }
+            $val = htmlspecialchars($val);
