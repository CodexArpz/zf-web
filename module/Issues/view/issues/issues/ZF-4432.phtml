    public function filterName($value, $allowBrackets = false)
    {
        $charset = '^a-zA-Z0-9_\x7f-\xff';
        if ($allowBrackets) {
            $charset .= '[]';
        }
        return preg_replace('/[' . $charset . ']/', '', (string) $value);
