+                        -&gt;addSubForm(new Zend_Form_SubForm(), 'foo')
+                        -&gt;foo-&gt;setIsArray(false)
+                             -&gt;addElement('text', 'foo')
+                             -&gt;foo-&gt;addValidator('Identical',
