@@ -73,10 +73,11 @@
                . '&gt;';

         if (false !== $content) {
-            $xhtml .= $content
-                   .  '';
+            $xhtml .= $content;
         }

+        $xhtml .= '';
+
         return $xhtml;
     }
 }
