/**
 * Set all elements' filters
 *
 * @param  array $filters
 * @return Zend_Form
 */
public function setElementFilters(array $filters)
{
    foreach ($this-&gt;getElements() as $element) {
        $element-&gt;setFilters($filters);
    }
    return $this;
}
</code></pre>

