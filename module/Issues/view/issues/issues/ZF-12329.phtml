<p>$hostname = 'localhost';
$validator = new Zend_Validate_Hostname(Zend_Validate_Hostname::ALLOW_ALL);
if($validator-&gt;isValid($hostname))
{
    var_dump($validator-&gt;getErrors());
}</p>

