public function getTmpDir()
{
    if (is_writeable($this-&gt;_root)) {
        return $this-&gt;_root . DIRECTORY_SEPARATOR . 'zend_cache_tmp_dir';
    } else {
        if (getenv('TMPDIR')){
            return getenv('TMPDIR').DIRECTORY_SEPARATOR . 'zend_cache_tmp_dir';
        } else {
