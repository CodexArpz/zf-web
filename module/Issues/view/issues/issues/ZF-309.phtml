<pre class="literal">
    /**
     * Total Number of pages returned
     *
     * @return int Total number of pages returned
     */
    public function totalPages()
    {
        $result = $this-&gt;_xpath-&gt;query('//az:TotalPages/text()');
        return (int) $result-&gt;item(0)-&gt;data;
    }
</pre>

