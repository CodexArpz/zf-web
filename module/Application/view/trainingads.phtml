<a id="training-ad" href="http://www.zend.com/en/services/certification/framework-2/"><img src="<?php echo $this->basePath('/images/ZF2-Certification-390x300px.png') ?>"></a>
<script language="JavaScript">
(function displayAd () {
  var ads = [
    {
      target: 'http://www.zend.com/en/services/certification/framework-2/',
      image: '<?php echo $this->basePath('/images/ZF2-Certification-390x300px.png') ?>'
    }
  ];

  if (! ads.length) {
    return;
  }

  var link  = document.getElementById('training-ad');
  var image = document.querySelector('#training-ad img');
  var index = 0;

  var swap = function() {
    index = (index === 0) ? 1 : 0;
    
    link.setAttribute('href', ads[index].target);
    image.setAttribute('src', ads[index].image);
  };

  window.setInterval(swap, 8000);
})();
</script>
