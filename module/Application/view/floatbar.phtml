<!-- sticky z-ray bar -->
<div id="floating-bar">
    <a target="_blank" href="http://www.zend.com/en/products/server/z-ray-zend-framework-demo?utm_source=zffloat">See inside<br>your ZF app</a>
</div>
<script type="text/javascript">
    (function() {
        var scrollTimeout = false;
        var win           = $(window);
        var float         = $('#floating-bar');
        $(window).scroll(function() {
            if (scrollTimeout) {
                clearTimeout(scrollTimeout);
            }
            scrollTimeout = setTimeout(function () {
                float.stop().animate({
                        top: win.scrollTop() + win.height() / 2,
                        'margin-top': float.outerHeight() / -2
                    },
                    { duration: 1000 }
                );
            }, 1);
        });
    })();
</script>
